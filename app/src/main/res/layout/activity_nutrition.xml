<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="YOUR DAILY NUTRITION"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Calorie"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="300 / 2000 kcal"
                    android:id="@+id/txt_cal"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="2000"
                android:progress="300"
                android:layout_height="wrap_content"
                android:id="@+id/prog_cal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20 / 65 gr"
                    android:id="@+id/txt_fat"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="65"
                android:progress="20"
                android:layout_height="wrap_content"
                android:id="@+id/prog_fat" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Saturated Fat"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7 / 20 gr"
                    android:id="@+id/txt_satfat"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="20"
                android:progress="7"
                android:layout_height="wrap_content"
                android:id="@+id/prog_satfat" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cholesterol"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210 / 300 mg"
                    android:id="@+id/txt_cholesterol"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="300"
                android:progress="210"
                android:layout_height="wrap_content"
                android:id="@+id/prog_cholesterol" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sodium"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1350 / 2400 mg"
                    android:id="@+id/txt_sodium"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="2400"
                android:progress="1350"
                android:layout_height="wrap_content"
                android:id="@+id/prog_sodium" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Potassium"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1250 / 3500 mg"
                    android:id="@+id/txt_potassium"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="3500"
                android:progress="1250"
                android:layout_height="wrap_content"
                android:id="@+id/prog_potassium" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrate"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="210 / 300 gr"
                    android:id="@+id/txt_carbohydrate"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="300"
                android:progress="210"
                android:layout_height="wrap_content"
                android:id="@+id/prog_carbohydrate" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fiber"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3 / 25 gr"
                    android:id="@+id/txt_fiber"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp"/>
            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:max="25"
                android:progress="3"
                android:layout_height="wrap_content"
                android:id="@+id/prog_fiber" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Nutrition xp:\n20 / 100"
            android:id="@+id/txt_nutritionxp"
            android:layout_weight="2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back"
                android:id="@+id/btn_back" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Food Journal"
                android:id="@+id/btn_foodjournal"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>